<h2>マイページ</h2>

  <h5>
    登録情報
     <%= link_to "編集する", edit_public_customer_path(current_customer), class:"btn btn-success" %>
  </h5>


<div="row">
  <table class="m-2" border="1", style="font-size : 18px;">
    <tr>
      <td>氏名</td>
      <td><%= @customer.family_name %><%= @customer.last_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.family_name_kana %><%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </table>
</div>
<div>
  <table>
    <tr>
      <td>
        <h5>配送先</h5>
      </td>
      <td><%= link_to "一覧を見る", public_addresses_path %></td>
    </tr>
    <tr>
      <td>
        <h5>注文履歴</h5>
      </td>
      <td><%= link_to "一覧を見る", public_orders_path %></td>
    </tr>

  </table>

</div>

