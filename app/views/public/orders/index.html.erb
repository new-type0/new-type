<div style="position: relative; text-align: center; margin-top: 20px;">
  <img src="<%= asset_path('ribon04.png') %>" alt="Your Image" style="max-width: 100%; max-height: 100%; display: inline-block;">
  <div style="position: absolute; top: 55%; left: 50%; transform: translate(-50%, -50%); color: dark; font-size: 24px; font-weight: bold;">
    注文一覧
  </div>
</div>
<div class="row mt-3">
  <div class="col-10 offset-1">
    <table class="table table-bordered border-dark">
      <tr class="table-secondary">
        <th style="width: 15%;">注文日</th>
        <th style="width: 40%;">配送先</th>
        <th style="width: 15%;">注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.shipping_postal_code %><br>
            <%= order.shipping_address %><br>
            <%= order.shipping_name %>
          </td>
          <td><%= @order_detail.name %></td>
          <td><%= @order_detail.tax_included_price %></td>
          <td><%= @order_detail.order_status %></td>
          <td><%= link_to "表示する", public_order_path(order), class: 'btn btn-sm btn-primary' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

