<h5>会員情報編集</h5>

<%= form_with model: @customer, url: public_customer_path(current_customer), method: :patch do |f| %>

<div>
  <table>
    <tr>
      <td>名前</td>
      <td><%= f.label :"(姓)" %></td>
      <td><%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %></td>
      <td><%= f.label :"(名)" %></td>
      <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.label :"(セイ)" %></td>
      <td><%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %></td>
      <td><%= f.label :"(メイ)" %></td>
      <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td></td>
      <td><%= f.text_field :address, :size=>"40", autofocus: true, autocomplete: "address" %></td>
    </tr>
    <tr>
      <td>電話番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td><%= f.submit "編集内容を保存" %></td>
      <td></td>
      <td><%= link_to "退会する", customer_registration_path, method: :delete %></td>
    </tr>
  </table>
</div>
<% end %>
