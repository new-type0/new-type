<h2>会員一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.family_name + " " + customer.last_name, admin_customer_path(customer) %></td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_active == false %>
          有効
          <% else %>
          無効
          <% end %>
        </td>
      </tr>
      <% end %>
      <%= paginate @customers %>
  </tbody>
</table>