<div class='container'>
  <div class='row'>
    <div class="col-md-9 px-0 mx-auto">
      <div class='title_border text-center pt-1 pb-1 mt-5 mb-4'>
        <h3 class="mb-0">商品一覧</h3>
      </div>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class="col-md-9 bg-white p-5 mx-auto rounded-lg">

      <div class="mb-3">
        <%= link_to "新規登録" ,new_admin_item_path , class:"btn btn-success"%>
      </div>

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.tax_included_price.to_s(:delimited, delimiter: ',') + "円" %></td>
              <td><%= item.genre.name %></td>
              <td class="<%= item.is_saled ? 'text-success font-weight-bold' : 'text-danger font-weight-bold' %>">
                <%= item.is_saled ? '販売中' : '販売停止中' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class='row'>
        <div class="col-md-3 px-0 mx-auto">
          <%= paginate @items %>
        </div>
      </div>

    </div>
  </div>
</div>