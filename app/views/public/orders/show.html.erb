<div "container">
  <div class='row mb-3'>
    <div class='col-8 offset-1'>
      <h4 class="pt-3">注文履歴詳細</h4>
    </div>
  </div>
  <div class='row'>
    <div class='col-5 offset-1'>
      <h4>注文情報</h4>
      <table class='table table-bordered border-dark'>
        <td class="table-secondary">
          <tr>
            <th>注文日</th>
           <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>〒<%= @order.postal_code %><br>
                  <%= @order.address %><br>
                  <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </td>
      </table>
    </div>

    <div class='col-3'>
      <h4>請求情報</h4>
      <table class="table table-bordered border-dark">
        <% @order.postage = 800 %>
        <tr><th class="table-secondary">送料</th><td><%= @order.postage %></td></tr>
        <tr><th class="table-secondary">商品合計</th><td><%= total.to_i %></td></tr>
        <% @order.total_payment = @order.postage + total.to_i %>
        <tr><th class="table-secondary">請求金額</th><td><%= @order.billing_amount %></td></tr>
      </table>
    </div>
  </div>

  <div class='row'>
    <div class='col-7 offset-1'>
      <h4>注文内容</h4>
      <table class='table table-bordered border-dark'>
        <tr class="table-secondary">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
        <% total = 0 %>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td style="width: 60%;"><%= order_detail.item.name %></td>
            <td style="width: 20%;"><%= order_detail.item.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.amount * order_detail.item.price %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

