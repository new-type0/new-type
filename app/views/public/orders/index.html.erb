<div class='container'>
  <div class='row'>
    <div class="col-md-9 px-0 mx-auto">
      <div class='title_border text-center pt-1 pb-1 mt-5 mb-4'>
        <h3 class="mb-0">注文履歴一覧</h3>
      </div>
    </div>
  </div>
</div>
<div class="row bg-white p-4 mx-5 rounded-lg">
  <div class="col-11 mx-5">
    <table class="table table-bordered border-dark">
      <tr class="table-secondary">
        <th style="width: 15%;">注文日</th>
        <th style="width: 40%;">配送先</th>
        <th style="width: 15%;">注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.shipping_postal_code %><br>
            <%= order.shipping_address %><br>
            <%= order.shipping_name %>
          </td>
          <% order.order_details.each do |order_detail| %>
            <td><%= order_detail.item.name %></td>
             <td><%= order.billing_amount %>円</td>
            <td><%= order.order_status_i18n %></td>
          <% end %>
          <td><%= link_to "表示する", public_order_path(order), class: 'btn btn-sm btn-primary' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

