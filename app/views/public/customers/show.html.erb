<div class='container'>
  <div class='row'>
    <div class="col-md-6 px-0 mx-auto">
      <div class='title_border text-center pt-1 pb-1 mt-5 mb-4'>
        <h3 class="mb-0">マイページ</h3>
      </div>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class="col-md-6 bg-white p-5 mx-auto rounded-lg">

      <h4>登録情報 <%= link_to "編集する", edit_public_customer_path(current_customer), class:"btn btn-success" %></h4>

      <table border="1", style="font-size : 18px;">
        <tr>
          <td style="width: 150px;">氏名</td>
          <td style="width: 320px;"><%= @customer.family_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
          <td style="width: 150px;">カナ</td>
          <td style="width: 320px;"><%= @customer.family_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <td style="width: 150px;">郵便番号</td>
          <td style="width: 320px;"><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td style="width: 150px;">住所</td>
          <td style="width: 320px;"><%= @customer.address %></td>
        </tr>
        <tr>
          <td style="width: 150px;">電話番号</td>
          <td style="width: 320px;"><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td style="width: 150px;">メールアドレス</td>
          <td style="width: 320px;"><%= @customer.email %></td>
        </tr>
      </table>

      <table class="mt-3">
        <tr>
          <td class="mr-4"><h4>配送先</h4></td>
          <td><%= link_to "　一覧を見る　", public_addresses_path, class:"btn btn-primary m-2" %></td>
        </tr>
        <tr>
          <td class="mr-4"><h4>注文履歴</h4></td>
          <td><%= link_to "　一覧を見る　", public_orders_path, class:"btn btn-primary m-2" %></td>
        </tr>
      </table>

    </div>
  </div>
</div>
