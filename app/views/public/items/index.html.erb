<div class="mb-8 text-center">
  <span class="text-3xl font-bold">
    商品一覧
  </span>
</div>
<div class="flex flex-wrap justify-center md:justify-start px-5">
  <div class="mb-3 w-fit text-md font-medium mr-2 px-4 py-1.5 rounded <%= @sort === "latest" ? "bg-gray-800 text-gray-100" : "bg-gray-100 text-gray-800" %>">
    <%= link_to 'Latest', public_items_path(latest: true) %>
  </div>
  <div class="mb-3 w-fit text-md font-medium mr-2 px-4 py-1.5 rounded <%= @sort === "price_high_to_low" ? "bg-gray-800 text-gray-100" : "bg-gray-100 text-gray-800" %>">
    <%= link_to 'Price: High to Low', public_items_path(price_high_to_low: true) %>
  </div>
  <div class="mb-3 w-fit text-md font-medium mr-2 px-4 py-1.5 rounded <%= @sort === "price_low_to_high" ? "bg-gray-800 text-gray-100" : "bg-gray-100 text-gray-800" %>">
    <%= link_to 'Price: Low to High', public_items_path(price_low_to_high: true) %>
  </div>
</div>
<div class='flex flex-wrap justify-center'>
  <% @items.each do |item| %>
    <div class="w-full max-w-sm rounded-lg xl:w-4/12 md:w-6/12">
      <%= link_to public_item_path(item.id) do %>
        <%= image_tag item.image, class: "p-5 object-cover" %>
        <div class="px-5 pb-5">
          <p class="text-3xl font-semibold tracking-tight text-gray-900 mb-4"><%= item.name %></p>
          <div class="flex justify-between items-center">
            <span class="text-3xl font-bold text-gray-900"><%= number_to_currency(item.tax_included_price, unit: "¥", strip_insignificant_zeros: true) %></span>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>