<div class="text-center">
  <div class="row mt-4 ml-5">
    <div class="col-3">
      <%= image_tag 'illust_1.png' %>
    </div>
    <div class="col-4">
      <h2>配送先編集</h2>
    </div>
    <div class="col-3">
      <%= image_tag 'illust_1.png' %>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="col-md-12">
    <%= form_for @address, url: public_address_path(@address), method: :patch do |f| %>
      <div class="form-group row mt-3">
        <%= f.label :address_postal_code, "郵便番号（ハイフンなし）", class: "col-3 col-form-label" %>
        <div class="col-3">
          <%= f.text_field :post_code, placeholder: "0000000", class: "form-control", required: true %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :address, "住所", class: "col-3 col-form-label" %>
        <div class="col-6">
          <%= f.text_field :address, placeholder: "高知県", class: "form-control", required: true %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :address_name, "宛名", class: "col-3 col-form-label" %>
        <div class="col-3">
          <%= f.text_field :name, placeholder: "鳴瀬タカシ", class: "form-control", required: true %>
        </div>
        <div class="col-3 offset-3">
          <%= f.submit "変更内容を保存", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>