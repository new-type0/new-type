<div class='container'>
  <div class='row'>
    <div class="col-md-6 px-0 mx-auto">
      <div class='title_border text-center pt-1 pb-1 mt-5 mb-4'>
        <h3 class="mb-0">ジャンル編集</h3>
      </div>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class="col-md-6 bg-white p-5 mx-auto rounded-lg">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <th><%= f.label :"ジャンル名", class: "m-3" %></th>
        <td><%= f.text_field :name, class: "m-3" %></td>
        <td><%= f.submit "変更を保存", class: "btn btn-success m-3" %></td>
      <% end %>
    </div>
  </div>
</div>