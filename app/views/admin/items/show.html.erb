<div class='container'>
  <div class='row'>
    <div class="col-md-10 px-0 mx-auto">
      <div class='title_border text-center pt-1 pb-1 mt-5 mb-4'>
        <h3 class="mb-0">商品詳細</h3>
      </div>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class="col-md-10 bg-white p-5 mx-auto rounded-lg">

      <div class='row'>
        <div class="col-md-5">  <!--画像表示用-->
          <%= image_tag @item.image, class: "w-100" %>
        </div>

        <div class="col-md-7">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td style="width: 30%">商品名</td>
                <td style="width: 70%"><%= @item.name %></td>
              </tr>
              <tr>
                <td>商品説明</td>
                <td><%= @item.introduction %></td>
              </tr>
              <tr>
                <td>ジャンル</td>
                <td><%= @item.genre.name %></td>
              </tr>
              <tr>
                <td>税込価格<br>(税抜価格)</td>
                <td><%= @item.tax_included_price %> (<%= @item.remove_tax_price.to_s(:dalimited) %>)円</td>
              </tr>
              <tr>
                <td>販売ステータス</td>
                  <% if @item.is_saled == true %>
                    <td class="text-success"><%= "販売中" %></td>
                  <% else %>
                    <td class="text-danger"><%= "販売停止中" %></td>
                  <% end %>
              </tr>
            </tbody>
          </table>

          <div class="mb-5">
            <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
