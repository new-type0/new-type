<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", public_cart_item_cart_items_destroy_all_path(current_customer), method: :delete %>

<table border=4>
    <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
    </tr>
    <% @cart_items.each do |cart_item|%>
    <tr>
        <td>
            <%= image_tag cart_item.image %>
            <%= cart.item.name%>
        </td>
        <td><%= cart.item.tax_included_price %></td>
        <td>
            <%= cart.item.amount %>
            
        </td>

        
    </tr>
    <% end %>
</table>